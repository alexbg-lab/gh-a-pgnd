name: 19 - Reusable-workflow

on:
  workflow_dispatch:
    inputs:
      target-dir:
        type: string
        required: true
    outputs:
      build-status:
        value: ${{ jobs.deploy.outputs.url }}
        description: "Build status"
      url:
        value: ${{ jobs.deploy.outputs.url }}
        description: "URL of the deployed version"

jobs:
  deploy: uses:./.github/workflows/19.1-reusable-workflow
